<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuEditarContactoActivity"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo">

    <!-- TITULO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Contacto"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_centerInParent="true">

            </TextView>

        </RelativeLayout>

    </LinearLayout>

    <!-- INFORMCAION DEL CONTACTO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- NOMBRE Y APELLIDO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/user">
                    </ImageView>

                </RelativeLayout>

            </LinearLayout>

            <!-- -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/nombrecontacto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true">
                    </TextView>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <!-- NUMERO TELEFONICO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/telefono">
                    </ImageView>

                </RelativeLayout>

            </LinearLayout>

            <!-- -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/telefonocontacto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true">
                    </TextView>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <!-- BOTON NOMBRE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnEditarNombreContacto"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="16dp"
                android:text="Editar Nombre"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/cyan"/>
        </RelativeLayout>

    </LinearLayout>



    <!-- BOTON NUMERO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnEditarFonoContacto"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="16dp"
                android:text="Editar Numero"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/cyan"/>
        </RelativeLayout>

    </LinearLayout>

    <!-- BOTON VOLVER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnVolverEditarContacto"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="16dp"
                android:text="Volver"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>